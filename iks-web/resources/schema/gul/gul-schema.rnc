#default namespace = "http://com.iks.org/schema/gul/1.0"
include "gul-attributes.rnc"

gul.element = textbox | datebox | timebox | checkbox | tabbox | label | hbox | vbox | fieldbox | gridLayout | select | button

gul.elementType =
  attribute id {xsd:NCName }?
  & attribute style { text }?
  & attribute cssClass { text }?
  & attribute flex { text }?

gul.containerType =
  gul.elementType
  & gul.element*

gul.fieldType =
  gul.elementType
  & fieldNameAttr?
  & nameAttr?
  & labelAttr?
  & readonlyAttr?
  & attribute value { text }?

textbox = element textbox {
  gul.fieldType
  & attribute value { text }?
}

datebox = element datebox {
  gul.fieldType
}

timebox = element timebox {
  gul.fieldType
}

checkbox = element checkbox {
  gul.fieldType
  & attribute checked { xsd:boolean }?
}

tabbox = element tabbox {
  gul.elementType
  & element tab {
    labelAttr
    & gul.element*
  }*
}

label = element label {
  gul.elementType
  & valueAttr?
  & attribute control { xsd:NCName }?
  & text
}

boxType =
  gul.containerType
  & attribute orient { "vertical" | "horizontal" }?
  & attribute pack { "start" | "center" | "end" }?
  & attribute align { "start" | "center" | "end" | "stretch" | "baseline" }?

## horizontal flex container
hbox = element hbox {
  boxType
}

vbox = element vbox {
  boxType
}

fieldbox = element fieldbox {
  gul.containerType
}

gridLayout = element gridLayout {
  element columns {
    element column {
      gul.containerType
    }*
  }
  & element rows {
    element row {
      gul.containerType
    }*
  }
}

select = element select {
  gul.fieldType
  & element option {
    valueAttr | text
  }*
}

button = element button {
  gul.elementType
  & labelAttr
}