<?xml version="1.0"?>
<editView appObj="employee">
  <fieldbox>
    <textbox name="id" readonly="true"/>
    <textbox id="fio" name="fio" label="First/Last Name Name"/>
    <select name="gender">
    </select>
    <referenceSelect name="user" displayField="username"/>
  </fieldbox>
  <hbox pack="end">
    <button id="button1" label="Button 1"/>
    <spacer flex="1"/>
    <button id="button2" label="Button 2"/>
    <spacer flex="2"/>
    <button id="button3" label="Button 3"/>
    <vbox pack="end" align="stretch">
      <button id="button4" label="Button 4" style="width: 150px"/>
      <button id="button5" label="Button 5"/>
      <button id="button6" label="Button 6"/>
    </vbox>
    <script>
      $('#button1').click(function() {
        console.log("Button 1 clicked");
        $('#fio').val('Test fio');
      });
    </script>
  </hbox>
</editView>