<?xml version="1.0"?>
<editView appObj="employee" xmlns="http://com.iks.org/schema/edit/1.0">
  <fieldbox>
    <textbox fieldName="id" readonly="true"/>
    <textbox id="fio" fieldName="fio" label="First/Last fieldName"/>
    <select fieldName="gender"/>
    <!--<referenceSelect fieldName="user" displayField="username"/>-->
    <referenceField fieldName="user" displayField="username" referenceGrid="user_grid"/>
    <referenceField fieldName="department" displayField="name" referenceGrid="department_main_grid"/>
  </fieldbox>
  <tabbox>
    <tab label="Tab 1">
      <hbox>
        <textbox id="docpath"/>
        <button label="Browse..."/>
      </hbox>
    </tab>
    <tab label="Tab 2">
      <label control="doctitle" value="Document Title:"/>
      <textbox id="doctitle" flex="1"/>
    </tab>
    <tab label="Grid">
      <gridLayout>
        <columns>
          <column flex="1"/>
          <column flex="2"/>
        </columns>
        <rows>
          <row>
            <label control="doctitle" value="Document Title:"/>
            <textbox id="doctitle" flex="1"/>
          </row>
          <row>
            <label control="docpath" value="Path:"/>
            <hbox flex="1">
              <textbox id="docpath"/>
              <button label="Browse..."/>
            </hbox>
            <label value="Hello"/>
          </row>
        </rows>
      </gridLayout>
    </tab>
  </tabbox>
</editView>