<?xml version="1.0"?>
<editView appObj="employee" xmlns="http://com.iks.org/schema/edit/1.0">
  <fieldbox>
    <textbox name="id" readonly="true"/>
    <textbox id="fio" name="fio" label="First/Last Name Name"/>
    <select name="gender"/>
    <referenceSelect name="user" displayField="username"/>
  </fieldbox>
  <tabbox>
    <tab label="Tab 1">
      <hbox>
        <textbox id="docpath"/>
        <button label="Browse..."/>
      </hbox>
    </tab>
    <tab label="Tab 2">
      <label control="doctitle" value="Document Title:"/>
      <textbox id="doctitle" flex="1"/>
    </tab>
    <tab label="Grid">
      <grid>
        <columns>
          <column flex="1"/>
          <column flex="2"/>
        </columns>
        <rows>
          <row>
            <label control="doctitle" value="Document Title:"/>
            <textbox id="doctitle" flex="1"/>
          </row>
          <row>
            <label control="docpath" value="Path:"/>
            <hbox flex="1">
              <textbox id="docpath"/>
              <button label="Browse..."/>
            </hbox>
            <label value="Hello"/>
          </row>
        </rows>
      </grid>
    </tab>
  </tabbox>
</editView>