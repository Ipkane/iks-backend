<?xml version="1.0"?>
<editView appObj="employee" xmlns="http://com.iks.org/schema/edit/1.0">
  <fieldbox>
    <textbox fieldName="id" readonly="true"/>
    <textbox fieldName="fio" label="First/Last fieldName"/>
    <select fieldName="gender"/>
    <referenceSelect fieldName="user" displayField="username"/>
  </fieldbox>
  <tabbox>
    <tab label="Tab 1">
      <hbox>
        <textbox/>
        <button label="Browse..."/>
      </hbox>
    </tab>
    <tab label="Tab 2">
      <label control="doctitle" value="Document Title:"/>
      <textbox flex="1"/>
    </tab>
  </tabbox>
</editView>