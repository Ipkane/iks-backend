<?xml version="1.0"?>
<listView appObj="employee" xmlns="http://com.iks.org/schema/list/1.0">
  <appTable id="employee_grid" appObj="employee">
    <filterPanel>
      <hbox>
        <textbox fieldName="id" flex="1"/>
        <textbox fieldName="fio" flex="1"/>
      </hbox>
      <hbox>
        <select fieldName="gender" flex="1"/>
        <referenceSelect fieldName="user" displayField="username" flex="1"/>
      </hbox>
    </filterPanel>
    <columns>
      <column fieldName="id"/>
      <column fieldName="fio" label="First/Last Name Name"/>
      <column fieldName="gender"/>
      <column fieldName="user.username" label="Username"/>
      <column fieldName="user.password" label="Password"/>
    </columns>
  </appTable>
</listView>