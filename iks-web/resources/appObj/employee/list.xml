<?xml version="1.0"?>
<listView appObj="employee" xmlns="http://com.iks.org/schema/list/1.0">
  <appTable id="employee_grid" appObj="employee">
    <filterPanel>
      <hbox>
        <textbox fieldName="id"/>
        <textbox fieldName="fio"/>
      </hbox>
      <hbox>
        <select fieldName="gender"/>
        <referenceField fieldName="user" displayField="username" referenceGrid="user_grid"/>
        <button label="Push the button" id="button_1"/>
      </hbox>
    </filterPanel>
    <columns>
      <column fieldName="id"/>
      <column fieldName="fio" label="First/Last Name Name"/>
      <column fieldName="gender"/>
      <column fieldName="user.username" label="Username"/>
      <column fieldName="department.name" label="Department"/>
    </columns>
  </appTable>
</listView>