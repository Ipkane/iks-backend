<?xml version="1.0"?>
<editView appObj="user" xmlns="http://com.iks.org/schema/edit/1.0">
  <fieldbox>
    <textbox fieldName="id" readonly="true"/>
    <textbox fieldName="username"/>
    <textbox fieldName="password"/>
    <checkbox fieldName="active"/>
  </fieldbox>
  <tabbox>
    <tab label="Roles">
      <referenceTableField fieldName="roles" referenceGrid="role_grid">
        <columns>
          <column fieldName="roles.id" label="Role Id"/>
          <column fieldName="roles.name" label="Name"/>
        </columns>
      </referenceTableField>
    </tab>
  </tabbox>
</editView>